<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="finance_report_wizard_form" model="ir.ui.view">
        <field name="name">finance.report.wizard.form</field>
        <field name="model">finance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Filter Finance Entries">
                <group>
                    <field name="entry_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_filter_report" type="object" string="Filter" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="finance_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Filter Finance Entries</field>
        <field name="res_model">finance.report.wizard</field>
        <field name="view_mode">form,tree</field>
        <field name="target">new</field>
    </record>


    <menuitem id="finance_record_filter" name="Filter Records"
              action="finance_report_wizard_action"
              parent="finance_menu_root"/>
</odoo>
